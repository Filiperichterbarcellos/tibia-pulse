// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"          // ou "mysql" / "sqlite" conforme teu banco
  url      = env("DATABASE_URL")
}

// teu enum e models abaixo...

enum FavoriteType {
  AUCTION
  BOSS
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  password  String     // hash com bcrypt
  favorites Favorite[] // relação
  createdAt DateTime   @default(now())
}

model Favorite {
  id        String        @id @default(cuid())
  userId    String
  type      FavoriteType
  key       String        // ex: auctionId ou bossSlug
  notes     String?       // opcional
  createdAt DateTime      @default(now())

  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type, key])
}
