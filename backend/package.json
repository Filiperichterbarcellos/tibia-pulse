{
  "name": "tibia-pulse-backend",
  "version": "1.0.0",
  "description": "Backend do projeto Tibia Pulse",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "dotenv -e .env.local -- tsx -r tsconfig-paths/register src/server.ts",
    "dev:prod": "dotenv -e .env.prod -- tsx -r tsconfig-paths/register src/server.ts",
    "build": "tsc -p tsconfig.json",
    "prisma:generate": "prisma generate",
    "start": "npm run prisma:generate && node -r tsconfig-paths/register dist/server.js",
    "typecheck": "tsc --noEmit",
    "pretest": "dotenv -e .env.test -- npx prisma migrate deploy || dotenv -e .env.test -- npx prisma db push",
    "test": "dotenv -e .env.test -- jest",
    "test:coverage": "dotenv -e .env.test -- jest --coverage",
    "test:unit": "dotenv -e .env.test -- jest --coverage --testPathIgnorePatterns='.*\\.int\\.spec\\.ts$'",
    "test:int": "dotenv -e .env.test -- jest --coverage --testPathPattern='.*\\.int\\.spec\\.ts$'"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "openapi-types": "^12.1.3",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^11.10.0",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "react-router-dom": "^7.9.5",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  }
}
